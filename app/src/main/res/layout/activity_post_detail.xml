<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary"
    tools:context=".ui.posts.detail.PostDetailActivity">

    <include
        android:id="@+id/containerToolbar"
        layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPost"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/img_example"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Titulo"
                android:fontFamily="@font/plus_jakarta_sans_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                android:layout_marginHorizontal="@dimen/margin_app"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_italic"
                tools:text="Descripcion  dasdasdasdasd assdasdasdas adadasdas asdasdas"
                android:layout_marginHorizontal="@dimen/margin_app"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="09/12/2018"
                android:fontFamily="@font/plus_jakarta_sans_semi_bold"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/margin_app"
                android:textColor="@color/color_text"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>