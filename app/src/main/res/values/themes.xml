    <style name="TextStyleRegular">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleSemiBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_primary</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ToolbarStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_medium</item>
        <item name="android:gravity">center</item>
        <item name="actionMenuTextColor">@color/color_primary</item>
        <item name="titleTextColor">@color/black</item>
    </style>
